<form action="/add-form" class="formulario-postagem" method="post">
    <div class="form-control">
        <label for="titulo">Título</label>
        <input type="text" name="titulo" id="titulo" placeholder="Digite aqui o título da postagem">
    </div>
    <div class="form-control">
        <label for="conteudo">Conteudo</label>
       <textarea name="conteudo" placeholder="Digite o contéudo da postagem" id="conteudo"></textarea>
    </div>
    <div class="form-control">
        <button type="submit">Cadastrar Postagem</button>
    </div>
</form>